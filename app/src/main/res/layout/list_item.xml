<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="8dp">


        <TextView
            android:id="@+id/txname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="TITLE"
            android:layout_marginLeft="5dp"
            android:textSize="28sp"
            android:textColor="#3a9987"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/txwhere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="content"
            android:layout_toRightOf="@+id/txname"
            android:layout_marginLeft="25dp"
            android:textSize="17sp"
            android:layout_marginTop="8dp"
            android:textColor="#62bfad"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txhowmany"
            android:includeFontPadding="false"
            android:layout_toRightOf="@+id/txname"
            android:text="content"
            android:layout_below="@+id/txwhere"
            android:layout_marginLeft="25dp"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:textColor="#62bfad"/>

    <ImageView
        android:id="@+id/delete_list"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/delete_list"
        android:tint="#3a9987"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"/>
</RelativeLayout>